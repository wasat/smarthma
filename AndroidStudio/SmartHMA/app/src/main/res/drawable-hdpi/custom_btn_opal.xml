<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="@color/button_blue" />
            <gradient android:angle="-90" android:startColor="@color/button_blue" android:endColor="@color/button_blue" />
            <size android:height="@dimen/menu_button_size" android:width="@dimen/menu_button_size" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="oval">
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="@color/button_blue" />
            <solid android:color="@color/button_blue" />
            <size android:height="@dimen/menu_button_size" android:width="@dimen/menu_button_size" />

        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#88918c" />
            <gradient android:angle="-90" android:startColor="#ffffff" android:endColor="#ffffff" />
            <size android:height="@dimen/menu_button_size" android:width="@dimen/menu_button_size" />
        </shape>
    </item>
</selector>