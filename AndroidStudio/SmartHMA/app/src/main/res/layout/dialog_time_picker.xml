<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:minWidth="400dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/background_white">

    <pl.wasat.smarthma.customviews.TextViewWithFont
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/dialogHeader"
        android:text="Choose the time" />

    <pl.wasat.smarthma.customviews.TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="@dimen/search_eo_data_padding" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_gray"
        android:paddingTop="@dimen/search_eo_data_padding_medium">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/search_eo_data_padding"
            android:background="@color/background_white">

            <Button
                android:id="@+id/dialog_time_picker_cancel"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_blue_height"
                android:layout_weight="1"
                android:text="Cancel"
                style="@style/buttonBlue" />

            <Button
                android:id="@+id/dialog_time_picker_choose"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/button_blue_height"
                android:layout_weight="1"
                style="@style/buttonBlue"
                android:text="Choose"
                android:layout_marginLeft="@dimen/search_eo_data_padding_small" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>